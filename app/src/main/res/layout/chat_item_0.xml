<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_chat_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="2017/1/1 00:00:00"
        android:textColor="@color/colorGray_b"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">


            <com.wzm.tasking.view.CircleImageView
                android:id="@+id/img_chat_item_user"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center" />


            <TextView
                android:id="@+id/tv_chat_item_user"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="User"
                android:textColor="@color/colorGray_3"
                android:textSize="13sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_chat_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/chat_bg"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_chat_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray_3"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img_chat_item_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_chat_item_img2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>